@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="../Content/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../Content/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="../Content/bower_components/Ionicons/css/ionicons.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="../Content/dist/css/skins/_all-skins.min.css">
    
    
    <script>
        var baseUrl = "@Url.Content("~/")";
    </script>

    <!-- REQUIRED JS SCRIPTS -->
    <!-- jQuery 3 -->
    <script src="../Content/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="../Content/bower_components/jquery-ui/jquery-ui.min.js"></script>

    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <style>
        /*body {
            background-size: cover;
            background-repeat: no-repeat;
            background: linear-gradient(to top, #302f2f, #989696);
            height: -webkit-fill-available;
            overflow: hidden;
        }*/

        body, html, #wrapper {
            width: 100%;
            height: 100%;
            background: linear-gradient(#ffffff, #222d32);
        }

        #wrapper {
            display: table;
        }

        #main {
            display: table-cell;
            vertical-align: middle;
            text-align: center;
        }

        #content {
            background: #848a8d24;
            height: 300px;
            width: 300px;
            margin: 0 auto;
            border-radius: 25px;
            box-shadow: 0 1px 35px rgba(0, 0, 0, 0.36);
        }

        #loginpic {
            background-image: url(../Content/Images/lock.png);
            background-repeat: no-repeat;
            height: 130px;
            width: 271px;
            margin: auto;
            position: relative;
            top: -60px;
        }

        .loginfont {
            color: white;
            font-weight: bolder; 
        }

        .input-group-addon {
            padding: 6px 12px;
            font-size: 14px;
            font-weight: 400;
            line-height: 1;
            color: #ffffffdb;
            text-align: center;
            background-color: #636b6f;
            border: 1px solid #b7c0c0;
            border-radius: 4px;
        }

        .form-control {
            display: block;
            width: 100%;
            height: 34px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #4b4b4b;
            background-color: #c9d4d4d1;
            background-image: none;
            border: 1px solid #b7b6b6;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.22);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        }

        .btn-login {
            color: #414141;
            background-color: #cdcdcd;
            border-color: #a9a9a9;
            font-weight: bolder;
        }
        .btn-login:hover {
            color: #efeeee;
            background-color: #899398;
            border-color: #8a8a8a;
        }
    </style>
</head>
<body>
    <div id="wrapper">
        <div id="main">
            <div id="content">
                <div id="loginpic"></div>
                <div class="col-md-12" style="position: relative; top: -60px;">
                    <small class="loginfont">Username</small>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input type="email" class="form-control">
                    </div>
                    <small class="loginfont">Password</small>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        <input type="password" class="form-control">
                    </div>
                    <br />
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-8">
                        <button type="button" id="btnlogin" class="btn btn-block btn-login">LOGIN</button>
                    </div>
                    <div class="col-md-2">
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        $('#btnlogin').on('click', function () {
            window.location = baseUrl + "Home/Index";
        });
    });
</script>
